    <!-- Secure Element HAL -->
    <hal format="hidl" optional="true">
        <name>android.hardware.secure_element</name>
        <version>1.0</version>
        <interface>
            <name>ISecureElement</name>
            <instance>SIM1</instance>
        </interface>
    </hal>
    <hal format="hidl" optional="true">
        <name>android.hardware.secure_element</name>
        <version>1.0</version>
        <interface>
            <name>ISecureElement</name>
            <instance>eSE1</instance>
        </interface>
    </hal>
    <!-- Kernel requirements for FCM 5 -->
    <kernel version="4.9.141">
        <config>
            <key>CONFIG_ANDROID</key>
            <value type="tristate">y</value>
        </config>
        <config>
            <key>CONFIG_CGROUP_SCHED</key>
            <value type="tristate">y</value>
        </config>
        <config>
            <key>CONFIG_ANDROID_PARANOID_NETWORK</key>
            <value type="tristate">y</value>
        </config>
        <!-- Add more FCM5-mandated configs as needed -->
    </kernel>

    <!-- SEPolicy -->
    <sepolicy>
        <version>202404</version>
        <kernel-sepolicy-version>30</kernel-sepolicy-version>
    </sepolicy>
    <framework>
        <version>5.0</version>
        <!-- Other framework settings -->
    </framework>
