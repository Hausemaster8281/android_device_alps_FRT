<manifest version="1.0" type="device" target-level="3">
    <!-- Required for all devices -->
    <hal format="hidl">
        <name>android.hardware.health</name>
        <transport>hwbinder</transport>
        <fqname>@2.1::IHealth/default</fqname>
    </hal>
    
    <!-- Audio HALs -->
    <hal format="hidl">
        <name>android.hardware.audio</name>
        <transport>hwbinder</transport>
        <fqname>@7.0::IDevicesFactory/default</fqname>
        <version>7.0</version>
    </hal>
    <hal format="hidl">
        <name>android.hardware.audio.effect</name>
        <transport>hwbinder</transport>
        <fqname>@7.0::IEffectsFactory/default</fqname>
        <version>7.0</version>
    </hal>

    <!-- Bluetooth HALs -->
    <hal format="hidl">
        <name>android.hardware.bluetooth</name>
        <transport>hwbinder</transport>
        <fqname>@1.1::IBluetoothHci/default</fqname>
        <version>1.1</version>
    </hal>
    <hal format="hidl">
        <name>android.hardware.bluetooth.audio</name>
        <transport>hwbinder</transport>
        <fqname>@2.1::IBluetoothAudioProvidersFactory/default</fqname>
        <version>2.1</version>
    </hal>

    <!-- Camera HAL -->
    <hal format="hidl">
        <name>android.hardware.camera.provider</name>
        <transport>hwbinder</transport>
        <fqname>@2.5::ICameraProvider/internal/0</fqname>
        <version>2.5</version>
    </hal>

    <!-- DRM HALs -->
    <hal format="hidl">
        <name>android.hardware.drm</name>
        <transport>hwbinder</transport>
        <fqname>@1.3::ICryptoFactory/clearkey</fqname>
        <fqname>@1.3::ICryptoFactory/widevine</fqname>
        <fqname>@1.3::IDrmFactory/clearkey</fqname>
        <fqname>@1.3::IDrmFactory/widevine</fqname>
        <version>1.3</version>
    </hal>

    <!-- GNSS HAL -->
    <hal format="hidl">
        <name>android.hardware.gnss</name>
        <transport>hwbinder</transport>
        <fqname>@2.1::IGnss/default</fqname>
        <version>2.1</version>
    </hal>

    <!-- Graphics HAL -->
    <hal format="hidl">
        <name>android.hardware.graphics.composer</name>
        <transport>hwbinder</transport>
        <fqname>@2.2::IComposer/default</fqname>
        <version>2.2</version>
    </hal>

    <!-- Light HAL -->
    <hal format="hidl">
        <name>android.hardware.light</name>
        <transport>hwbinder</transport>
        <fqname>@2.0::ILLight/default</fqname>
        <version>2.0</version>
    </hal>

    <!-- Radio HALs (simplified) -->
    <hal format="hidl">
        <name>android.hardware.radio</name>
        <transport>hwbinder</transport>
        <fqname>@1.5::IRadio/slot1</fqname>
        <fqname>@1.5::IRadio/slot2</fqname>
        <version>1.5</version>
    </hal>

    <!-- Sensors HAL -->
    <hal format="hidl">
        <name>android.hardware.sensors</name>
        <transport>hwbinder</transport>
        <fqname>@2.1::ISensors/default</fqname>
        <version>2.1</version>
    </hal>

    <!-- Thermal HAL -->
    <hal format="hidl">
        <name>android.hardware.thermal</name>
        <transport>hwbinder</transport>
        <fqname>@1.1::IThermal/default</fqname>
        <version>1.1</version>
    </hal>

    <!-- USB HAL -->
    <hal format="hidl">
        <name>android.hardware.usb</name>
        <transport>hwbinder</transport>
        <fqname>@1.2::IUsb/default</fqname>
        <version>1.2</version>
    </hal>

    <!-- Vibrator HAL -->
    <hal format="hidl">
        <name>android.hardware.vibrator</name>
        <transport>hwbinder</transport>
        <fqname>@1.1::IVibrator/default</fqname>
        <version>1.1</version>
    </hal>

    <!-- WiFi HALs -->
    <hal format="hidl">
        <name>android.hardware.wifi</name>
        <transport>hwbinder</transport>
        <fqname>@1.4::IWifi/default</fqname>
        <version>1.4</version>
    </hal>
    <hal format="hidl">
        <name>android.hardware.wifi.hostapd</name>
        <transport>hwbinder</transport>
        <fqname>@1.2::IHostapd/default</fqname>
        <version>1.2</version>
    </hal>
    <hal format="hidl">
        <name>android.hardware.wifi.supplicant</name>
        <transport>hwbinder</transport>
        <fqname>@1.3::ISupplicant/default</fqname>
        <version>1.3</version>
    </hal>

    <!-- MediaTek specific HALs -->
    <hal format="hidl">
        <name>vendor.mediatek.hardware.mtkradioex</name>
        <transport>hwbinder</transport>
        <fqname>@1.6::IMtkRadioEx/mtkSlot1</fqname>
        <fqname>@1.6::IMtkRadioEx/mtkSlot2</fqname>
        <version>1.6</version>
    </hal>

    <!-- CAS HAL -->
    <hal format="hidl">
        <name>android.hardware.cas</name>
        <transport>hwbinder</transport>
        <fqname>@1.2::IMediaCasService/default</fqname>
        <version>1.2</version>
    </hal>

    <!-- SE Policy version -->
    <sepolicy>
        <version>27.0</version>
    </sepolicy>

    <!-- Vendor NDK version -->
    <vendor-ndk>
        <version>27</version>
    </vendor-ndk>

    <!-- System SDK version -->
    <system-sdk>
        <version>27</version>
    </system-sdk>
</manifest>
